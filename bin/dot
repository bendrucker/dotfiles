#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export ZSH="$HOME/.dotfiles"

# Install homebrew
source "$ZSH/scripts/homebrew.sh"
# Upgrade homebrew
echo "› brew update"
brew update

# Install software
echo "› $ZSH/scripts/install"
"$ZSH/scripts/install"
