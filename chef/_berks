#compdef berks

# Functions
_berks_get_command_list () {
    berks -h \
      | sed '/Commands/d' \
      | sed '/Options/,$d' \
      | sed '/^$/d' \
      | sed 's/berks//' \
      | awk '{ print $1}'
}

_berks () {
  if [ -f Berksfile ]; then
    compadd `_berks_get_command_list`
  fi
}

_berks "$@"