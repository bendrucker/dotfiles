#!/usr/bin/env bash
#
# Run all dotfiles installers.

set -e

cd "$(dirname "$0")"/..

echo "â€º brew bundle"
brew bundle

# Expose brew configuration to installers
eval "$(brew shellenv)"

# Allow installers to use executables provided via mise
# shellcheck disable=SC1091
source ./mise/path.zsh

# Install mise plugins and the binaries they manage
./mise/install.sh

# TEMP: run go first since it has an mise-dependent installer
./go/install.sh

# find the installers and run them iteratively
find . -name install.sh ! -path "./mise/*" | while read -r installer ; do "${installer}"; done
