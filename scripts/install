#!/usr/bin/env zsh
#
# Run all dotfiles installers.

set -e

cd "$(dirname "$0")"/..

# Detect non-interactive mode (explicit setting or non-tty stdin)
if [[ -z "${NONINTERACTIVE-}" ]] && [[ ! -t 0 ]]; then
  export NONINTERACTIVE=1
fi

echo "â€º brew bundle"
brew bundle

# Expose brew configuration to installers
eval "$(brew shellenv)"

# Install mise tools and activate shims
source mise/install.sh

# find the installers other than mise and run them iteratively
find . -name install.sh ! -path "./mise/*" | while read -r installer ; do "${installer}"; done
